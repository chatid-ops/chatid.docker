DOCKER_OPTS="-H unix:///var/run/docker.sock"
{% if docker_tcp_host is defined %}
DOCKER_OPTS="$DOCKER_OPTS -H tcp://{{ docker_tcp_host }}:{{ docker_tcp_port }}"
{% endif %}
{% for dns in docker_dns_servers %}
DOCKER_OPTS="$DOCKER_OPTS --dns {{ dns }}"
{% endfor %}
